{
    "configurations": [{
        "type": "node",
        "request": "launch",
        "name": "Debug Server",
        "skipFiles": [
            "<node_internals>/**",
        ],
        "env": {
            "NODE_ENV": "dev"
        },
        "args": [
            "${workspaceFolder}/back_end/src/app.ts"
        ],
        "runtimeArgs": [
            "--nolazy",
            "--require",
            "ts-node/register",
        ],
        "sourceMaps": true,
        "restart": true,

        "resolveSourceMapLocations": [
            "${workspaceFolder}/**",
            "!**/node_modules/**"
        ],
        "outFiles": [
            "${workspaceFolder}/src/backend/dist/*.(m|c|)js",
            "!**/node_modules/**"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "openOnSessionStart",
        "cwd": "${workspaceFolder}/back_end"
    }
    ]
}